<div class="home-banner">
<h1><%= @cocktail.name %></h1>
</div>

<%= cl_image_tag @cocktail.photo, width: 200 %>


<% @cocktail.doses.each do |dose| %>

<h3>Ingredient: <%= dose.ingredient.name %>, Description: <%= dose.description %>, Quantity: <%= dose.quantity %> </h3>

<% end %>

<%= link_to "Take Me Back Home", cocktails_path, :class => 'btn btn-warning' %>
<%= link_to 'Add New Dose', new_cocktail_dose_path(@cocktail), :class => 'btn btn-primary' %>
<%= link_to 'Delete this Cocktail', destroy_cocktail_path(@cocktail), method: :delete, :class => 'btn btn-danger' %>
