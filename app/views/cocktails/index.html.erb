<div class="home-banner">
  <h1>Welcome to Mr. Cocktails</h1>
  <p>Discover our library of craft mixes</p>
  <%= link_to 'Build a Cocktail', new_cocktail_path, :class => "btn btn-primary btn-lg"%>
</div>

<% @cocktails.each do |cocktail| %>
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
<!--   <div class="card-category">Top Drink</div> -->
  <div class="card-description">
    <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
    <p>Delicious & flavorful</p>
  </div>
  <a class="card-link" href="<%= cocktail_path(cocktail) %>" ></a>
</div>
<% end %>
